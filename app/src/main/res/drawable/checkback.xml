<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true"><shape>

        <!-- 这个是选中的  设为true -->
        <solid android:color="@color/huiyuan_tvcolor" />
        <!-- 这个是按压的颜色 -->
        <stroke android:width="1dp" android:color="@color/huiyuan_tvcolor" />

        <corners android:radius="6dp" />
        <padding android:left="28dp" android:right="28dp" android:top="5dp" android:bottom="5dp"/>

        <!-- 四角的弧度 -->
    </shape></item>
    <!-- 这个是未选中的状态   -->
    <item android:state_checked="false"><shape>

        <!-- 这个是按压状态的  设为true -->
        <solid android:color="@color/white" />
        <!-- 这个是按压的颜色 -->
        <stroke android:width="1dp" android:color="@color/huiyuan_tvcolor" />

        <corners android:radius="6dp" />
        <!-- 四角的弧度 -->

        <padding android:left="28dp" android:right="28dp" android:top="5dp" android:bottom="5dp"/>

    </shape>
    </item>


</selector>
